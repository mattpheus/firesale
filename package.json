{
  "name": "express_auth_app",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "license": "MIT",
  "scripts": {
    "start": "node server.js",
    "db:init": "dropdb --if-exists express_auth_db && createdb express_auth_db",
    "db:reset": "node ./..scripts/resetDb.js",
    "db:seed": "node ./scripts/seedDb.js",
    "heroku-postbuild": "cd client/ && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
    "client": "cd client && npm start",
    "dev": "concurrently --kill-others-on-fail \"npm run start\" \"npm run client\""
  },
  "author": "",
  "devDependencies": {
    "nodemon": "^1.19.1"
  },
  "dependencies": {
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "concurrently": "^4.1.1",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "path": "^0.12.7",
    "pg": "^7.12.1",
    "sequelize": "^4.41.0"
  }
}
